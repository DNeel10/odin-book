<%= turbo_stream.replace dom_id(@likeable, :like_button) do %>
  <%= turbo_frame_tag dom_id(@likeable, :like_button) do %>
    <%= render partial: "likes/button", locals: { likeable: @likeable } %>
  <% end %>
<% end %>

<%= turbo_stream.replace dom_id(@likeable, :likes_counter) do %>
  <%= turbo_frame_tag dom_id(@likeable, :likes_counter) do %>
    <%= @likeable.likes.count %>
  <% end %>
<% end %>