

  <div class="card mb-4 shadow"> 

    <div class="d-flex justify-content-between align-items-center">
      <div class="card-body text-secondary flex-grow-1">
        <%= link_to post.body, 
                    post, 
                    data: { turbo_frame: "_top" }, 
                    style: "text-decoration: none" %>
      </div>
      <div class="align-items-right px-2 flex-shrink-0">
        Likes: <%= post.likes_count %>
      </div>
    </div>
    <div class="card-footer bg-body d-flex justify-content-between">
      <div>Posted by: <%= link_to post.user, 
                          user_profile_path(post.user), 
                          data: { turbo: false },
                          style: "text-decoration: none" %>
      </div>

    <% if post.user == current_user %>
      <div class="px-2">
        <%= link_to "Edit", edit_post_path(post), data: { turbo_frame: post } %>
      </div>
    <% end %>
    </div>
  </div>

