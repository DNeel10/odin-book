<h1>Posts</h1>

<div class="mb-4">
  <%= turbo_frame_tag id='new_post' do %>
    <%= link_to "create post", new_post_path, class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>



  <% @posts.order(id: :desc).limit(10).each do |post| %>
    <%= turbo_frame_tag post do %>
      <%= render partial: "posts/post_card", locals: { post: post } %>
    <% end %>
  <% end %>
