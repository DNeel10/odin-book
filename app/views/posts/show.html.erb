
<div>
  <%= @post.body %><br>
  <small>created by: <%= @post.user.email %></small><br>
  <%= render partial: "posts/likes/button", locals: { likeable: @post } %>
</div>
<% if @post.user == current_user %>
  <small><%= link_to 'edit', edit_post_path %> | 
       <%= link_to 'delete', post_path(@post), data: { turbo_method: :delete,
                                            turbo_confirm: 'Are you sure?' } %>
  </small><br>
<% end %>

<% @post.comments.each do |comment| %>
  <%= render partial: 'posts/comments/comment', locals: { comment: comment } %>
<% end %>

<%= render "posts/comments/comment_form" %>


