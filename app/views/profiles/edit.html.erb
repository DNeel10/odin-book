<%= form_with model: [@user, @profile], url: user_profile_path do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Name: ", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :birthday, "Birthday: ", class: "form-label" %>
    <%= f.date_field :birthday, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :about, "About Me: ", class: "form-label" %>
    <%= f.text_area :about, class: "form-control", size: "70x5" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>

