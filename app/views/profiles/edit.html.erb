<%= form_with model: [@user, @profile], url: user_profile_path do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Name: ", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :birthday, "Birthday: ", class: "form-label" %>
    <%= f.date_field :birthday, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :about, "About Me: ", class: "form-label" %>
    <%= f.text_area :about, class: "form-control", size: "70x5" %>
  </div>

  <div class="mb-3">
    <%= f.fields_for :user do |u| %>
      <%= u.label :avatar, "Profile Image: ", class: "form-label"  %>
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "d-block mb-2", size: "200x200" %>
      <% else %>
        <%= image_tag "profile.png", class: "d-block mb-2", size: "200x200" %>
      <% end %>
      <%= u.file_field :avatar, class: "form-control" %>
    <% end %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>

